@model IEnumerable<AlphaABSV2.Models.BookingForm>
@using AlphaABSV2.Models;
@{
    ViewBag.Title = "Group Bookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var pageName = "Group Booking";
}

<div class="small-header transition animated fadeIn">
    <div class="hpanel">
        <div class="panel-body">
            <div id="hbreadcrumb" class="pull-right">
                <ol class="hbreadcrumb breadcrumb">
                    <li><a href="@Url.Action("Index", "LandingPage")">Welcome</a></li>
                    <li class="active">
                        @pageName
                    </li>
                </ol>
            </div>
            <h2 class="font-light m-b-xs">
                @pageName
            </h2>
            <small>Find your group booking by searching for the reference number we sent you</small>
        </div>
    </div>
</div>

@using (Html.BeginForm("Search", "GroupBooking", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="content animate-panel">
        <div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="hpanel">
                        <div class="panel-heading">
                            <div class="panel-tools">
                                <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                            </div>
                            @pageName
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-4">
                                    @Html.TextBox("searchString")
                                    <input type="submit" value="search" class="btn btn-primary" />
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="hpanel">
                                @if (Model != null)
                                {
                                    <div class="panel-heading">
                                        <div class="panel-tools">
                                            <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                                        </div>
                                        <div class="panel-body">
                                            <div id="results">
                                                Search Results
                                                <table>
                                                    <tr>
                                                        <th>Party Name</th>
                                                        <th>Group Organiser</th>
                                                        <th>Select</th>
                                                    </tr>
                                                    @foreach (BookingForm bookForm in Model)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(model => bookForm.PartyName)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(model => bookForm.GroupOrganiser)
                                                            </td>
                                                            <td>
                                                                @Html.ActionLink("Select", "Create", new { id = bookForm.BookingFormID }, new { @class = "btn btn-primary" })
                                                            </td>
                                                        </tr>
                                                    }
                                                </table>

                                            </div>
                                        </div>
                                    </div>
                                }
                           
                    </div>
                </div>
            </div>
        </div>
    </div>
                                  
     
   
}

