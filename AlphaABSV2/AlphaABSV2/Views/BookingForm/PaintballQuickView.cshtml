@model IEnumerable<AlphaABSV2.Models.BookingForm>
@using AlphaABSV2.Helpers;

@{
    var pageName = "Paintball Quick View";
    ViewBag.Title = pageName;
}

<div class="small-header transition animated fadeIn">
    <div class="hpanel">
        <div class="panel-body">
            <div id="hbreadcrumb" class="pull-right">
                <ol class="hbreadcrumb breadcrumb">
                    <li><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                    <li class="active">
                        @pageName
                    </li>
                </ol>
            </div>
            <h2 class="font-light m-b-xs">
                @pageName
            </h2>
            <small>Filtered by Paintball Bookings.</small>
        </div>
    </div>
</div>

<div class="content animate-panel">
    <div>
        <div class="row">
            <div class="col-lg-12">
                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="panel-tools">
                            <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        </div>
                        Current Bookings
                    </div>
                    <div class="panel-body">
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.BookingRef)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateOfEvent)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.GroupOrganiser)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PartyName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TelNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.GroupSize)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StartTime)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EndTime)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Financials.First().AmountTaken)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Financials.First().BalanceRemaining)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BookingStatus)
                                </th>

                                <th></th>
                            </tr>
                            @foreach (var ev in Model.GroupBy(e => e.DateOfEvent))
                            {


                                <tr class="group-header">
                                    <td colspan="3">
                                        <span class="h3">@Convert.ToDateTime(ev.Key).ToShortDateString()</span>
                                    </td>
                                    <td colspan="3">
                                        <span class="h3">Total Groups : @BookingDBHelper.GetTotalGroups(ev.Key, 1)</span>
                                    </td>
                                    <td colspan="3">
                                        <span class="h3">Total Players : @BookingDBHelper.GetTotalPlayers(ev.Key, 1)</span>
                                    </td>
                                    <td colspan="3">
                                        <span class="h3">Capacity Left : 36</span>
                                    </td>

                                </tr>

                                foreach (var item in ev)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BookingRef)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateOfEvent)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.GroupOrganiser)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PartyName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TelNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.GroupSize)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StartTime)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EndTime)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Financials.First().AmountTaken)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Financials.First().BalanceRemaining)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BookingStatus)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.BookingFormID }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.BookingFormID }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.BookingFormID })
                                        </td>
                                    </tr>
                                }
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    @section Styles{
        @Styles.Render("~/bundles/quickviews/css")
    }
    @section Scripts{

        @Scripts.Render("~/bundles/jqueryui/js")
        @Scripts.Render("~/bundles/jquery/js")
        @Scripts.Render("~/bundles/quickviews/js")
    }
