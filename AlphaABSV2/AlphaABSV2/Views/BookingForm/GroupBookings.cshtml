@model IEnumerable<AlphaABSV2.Models.GroupBooking>

@{

    ViewBag.Title = "Provisional Bookings";
    var pageName = "All Group Bookings";

}
<div class="small-header transition animated fadeIn">
    <div class="hpanel">
        <div class="panel-body">
            <div id="hbreadcrumb" class="pull-right">
                <ol class="hbreadcrumb breadcrumb">
                    <li><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                    <li class="active">
                        @pageName
                    </li>
                </ol>
            </div>
            <h2 class="font-light m-b-xs">
                @pageName
            </h2>
            <small>View all Bookings here.</small>
        </div>
    </div>
</div>

<div class="content animate-panel">
    <div>
        <div class="row">
            <div class="col-lg-12">
                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="panel-tools">
                            <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        </div>
                        @pageName
                    </div>
                    <div class="panel-body">
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.GroupOrganiser)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PartyName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.GroupRef)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PlayerEmail)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PlayerMobile)
                                </th>
                                <th>
                                    Amount Paid
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GroupOrganiser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PartyName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GroupRef)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PlayerEmail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PlayerMobile)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PlayerAmountToPay)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.GroupBookingID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.GroupBookingID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.GroupBookingID })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <p>
        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-primary btn-md" })
    </p>
</div>
