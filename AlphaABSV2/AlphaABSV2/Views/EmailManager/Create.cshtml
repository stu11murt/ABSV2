@model AlphaABSV2.Models.EmailTemplates

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content animate-panel">
    <div>
        <div class="row">
            <div class="col-lg-12">
                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="panel-tools">
                            <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.LabelFor(model => model.TemplateTitle, htmlAttributes: new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-4">
                                @Html.EditorFor(model => model.TemplateTitle, new { htmlAttributes = new { @id = "title", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TemplateTitle, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="panel-tools">
                            <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        </div>
                    </div>
                    Edit your emails
                        <div class="panel-body">
                            
                            <div class="summernote">
                            </div>
                        </div>
                        <button id="saveHTML" type="submit" class="btn btn-primary">Save changes</button>
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn " })
                 </div>
            </div>
        </div>
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-md" })
        </p>
    </div>
</div>

@section Styles {
    @Styles.Render("~/bundles/summernote/css")
}

@section Scripts {
    @Scripts.Render("~/bundles/summernote/js")

    <script type="text/javascript">
        var piss = "";

        $(function () {

            // Initialize summernote plugin
            $('.summernote').summernote();

            var templateNam = "Template";

            var sHTML = $('.summernote').code();
            
            $('.summernote1').summernote({
                toolbar: [
                    ['headline', ['style']],
                    ['style', ['bold', 'italic', 'underline', 'superscript', 'subscript', 'strikethrough', 'clear']],
                    ['textsize', ['fontsize']],
                    ['alignment', ['ul', 'ol', 'paragraph', 'lineheight']],
                ]
            });

            

            $('#saveHTML').click(function () {
                piss = $('.summernote').code();
                templateNam = $('#title').val();
                $.post("/EmailManager/Create/", { sHTML: piss, templateNAME : templateNam });
              
            });
        });

    </script>
}