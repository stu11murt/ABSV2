@model AlphaABSV2.Models.EmailManager

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content animate-panel">
    <div>
        <div class="row">
            <div class="col-lg-12">
                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="panel-tools">
                            <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        </div>
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="panel-body">
                            <div class="summernote">
                                @Html.Hidden("sHTML")
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                        @Html.HiddenFor(modelItem => modelItem.EmailTemplateContent);
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn " })
                    }
                </div>
            </div>
        </div>
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-md" })
        </p>
    </div>
</div>

@section Styles {
    @Styles.Render("~/bundles/summernote/css")
}

@section Scripts {
    @Scripts.Render("~/bundles/summernote/js")

    <script type="text/javascript">

        $(function () {

            // Initialize summernote plugin
            $('.summernote').summernote();

            var sHTML = $('.summernote').code();

            console.log(sHTML);

            $('.summernote1').summernote({
                toolbar: [
                    ['headline', ['style']],
                    ['style', ['bold', 'italic', 'underline', 'superscript', 'subscript', 'strikethrough', 'clear']],
                    ['textsize', ['fontsize']],
                    ['alignment', ['ul', 'ol', 'paragraph', 'lineheight']],
                ]
            });


        });
    </script>
}